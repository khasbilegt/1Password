{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "1password8",
  "title": "1Password8",
  "description": "Search, open or edit your 1Password passwords from Raycast",
  "icon": "1password-icon.png",
  "author": "khasbilegt",
  "categories": [
    "Security"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "index",
      "title": "My Passwords",
      "subtitle": "1Password 8",
      "description": "List of all your 1Password items. Then open in your default browser, view items in 1Password, or open items in 1Password for editing.",
      "mode": "view",
      "keywords": [
        "1p",
        "1password",
        "password",
        "login"
      ]
    },
    {
      "name": "cache",
      "title": "Reset cache",
      "subtitle": "1Password 8",
      "description": "Manually reset all the cache.",
      "mode": "no-view",
      "keywords": [
        "cache",
        "reset cache",
        "reload"
      ]
    }
  ],
  "preferences": [
    {
      "name": "version",
      "type": "dropdown",
      "title": "1Password App Version",
      "description": "Select the version of the 1Password app you want to use",
      "data": [
        {
          "title": "1Password 8",
          "value": "v8"
        },
        {
          "title": "1Password 7",
          "value": "v7"
        }
      ],
      "required": true
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.41.1",
    "@raycast/utils": "^1.4.9"
  },
  "devDependencies": {
    "@types/node": "16.10.3",
    "@types/react": "18.0.9",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "prettier": "^2.5.1",
    "typescript": "^4.4.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "ray publish"
  }
}
